generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model TransportationMaps {
  id        String   @id @default(uuid())
  nama      String   @unique
  slug      String   @unique
  deskripsi String
  alamat    String
  longitude Float
  latitude  Float
  map_url   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reviews Reviews[]
}

model Reviews {
  id        String   @id @default(uuid())
  nama      String
  komentar  String
  tanggal   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  maps   TransportationMaps @relation(fields: [mapsId], references: [id], onDelete: Cascade)
  mapsId String
}
